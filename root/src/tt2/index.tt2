<h2 id="try-now">Try Treex::Web Now</h2>
<div class="row-fluid">
[% form = queryForm %]
  <form[% process_attrs(form.attributes) %]>
    <h3>1. Choose scenario</h3>
    <p>
      <select name="language" id="select-lang">
        <option value="">Select language...</option>
        <option value="en">English</option>
        <option value="cs">Czech</option>
      </select>
      <select name="scenario">
        <option>Czech analysis</option>
        <option>CS2EN translation</option>
      </select>
    </p>
    <p>or <a href="#">write your own.</a></p>
    <h3>2. Select input</h3>
    <p id="input-select">
      <input type="radio" id="radio1" name="radio" checked="checked" /><label for="radio1">Plain text</label>
      <input type="radio" id="radio2" name="radio" /><label for="radio2">URL</label>
      <input type="radio" id="radio3" name="radio" /><label for="radio3">Example file</label>
    </p>
[% form.field('input').render %]
    <h3>3. Run</h3>
    <p>[% form.field('submit').render %]</p>
  </form>
</div>
