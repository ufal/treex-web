[%
   site.url = {
     base        = Catalyst.req.base
     home        = c.uri_for(c.controller('Root').action_for('index'))
     query       = c.uri_for(c.controller('Query').action_for('index'))
     my_results  = c.uri_for(c.controller('Result').action_for('index'))
     my_scenarios = c.uri_for(c.controller('Scenario').action_for('my_scenarios'))
     scenarios   = c.uri_for(c.controller('Scenario').action_for('index'))
     new_scenario = c.uri_for(c.controller('Scenario').action_for('add'))
     login       = c.uri_for(c.controller('Login').action_for('login'))
     logout      = c.uri_for(c.controller('Login').action_for('logout'))
     signup      = c.uri_for(c.controller('Login').action_for('signup'))
   };
   MACRO view_scenario_url(id) GET c.uri_for(c.controller('Scenario').action_for('view'), [ id ]);
   MACRO edit_scenario_url(id) GET c.uri_for(c.controller('Scenario').action_for('edit'), [ id ]);
   MACRO delete_scenario_url(id) GET c.uri_for(c.controller('Scenario').action_for('delete'), [ id ]);
   MACRO download_scenario_url(id) GET c.uri_for(c.controller('Scenario').action_for('download'), [ id ]);
   MACRO run_scenario_url(id) GET c.uri_for(c.controller('Scenario').action_for('run'), [ id ]);

   site.url.view_scenario = \view_scenario_url;
   site.url.edit_scenario = \edit_scenario_url;
   site.url.delete_scenario = \delete_scenario_url;
   site.url.download_scenario = \download_scenario_url;
   site.url.run_scenario = \run_scenario_url;
-%]
